{
  "name": "contract-tests",
  "version": "1.0.0",
  "description": "slides for the contract tests talk",
  "main": "index.js",
  "scripts": {
    "present": "yarn scribe && browser-sync start --server --no-online --no-ui --startPath out/presentation.html --watch --files out/presentation.html --watchEvents add",
    "scribe:watch": "chokidar \"slides/*.adoc\" --command \"yarn scribe\"",
    "scribe": "node scripts/scribe.js"
  },
  "private": true,
  "dependencies": {
    "asciidoctor-reveal.js": "2.0.0",
    "asciidoctor.js": "1.5.9",
    "fs-extra": "7.0.1",
    "jest": "24.8.0",
    "ts-jest": "24.0.2",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@types/chokidar": "2.1.3",
    "@types/jest": "24.0.12",
    "@types/node": "12.0.0",
    "browser-sync": "2.26.5",
    "chokidar-cli": "1.2.2",
    "opener": "1.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
